<h1>All My Discounts</h1>

<div>
  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <h3>Discount-<%= link_to discount.id, "/merchant/discounts/#{discount.id}" %></h3>
      <p>Percentage: <%= (discount.percent * 100).to_i %>%</p>
      <p>Quantity: <%= discount.quantity %></p>
    </section>
  <% end %>
</div>
